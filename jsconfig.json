{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "checkJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["chrome", "jest"]
  },
  "include": [
    "background.js",
    "popup/popup.js",
    "options/options.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "scripts"
  ]
}
